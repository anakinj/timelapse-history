
@import 'nib'
@import url('http://fonts.googleapis.com/css?family=Quicksand')

global-reset()

main-color = #777777
background-color = #EEEEEE

body
  font-family 'Georgia'
  background-color background-color
  color #444

header
  font-family 'Quicksand'
  padding 50px 10px
  color #fff
  font-size 25px
  text-align center

.history-container
  padding 1em
  img
    width 50%
    min-height 400px
    margin-bottom 1em
    background-image url('http://placehold.it/400x400&text=NOTFOUND')
    background-size 100% auto
  input[type='range']
    width 100%
  .rangeslider + input[type='range'] + .rangeslider
      margin-top: 1em
  .rangeslider__fill
    background #444444
  .current-timestamp, .controls
    padding 1em 0 0 0.5em
    text-align center
    text-transform uppercase
  .controls
    color #000
    a
      font-size 2em
      text-decoration: none
      margin 0 0.2em 0 0.2em
    div
      margin 0.5em 0
      label > span
        margin-left 0.5em
